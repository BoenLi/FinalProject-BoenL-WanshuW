        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp">

            <TextView
                android:id="@+id/gender_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender: " />

            <RadioGroup>

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gender"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="gender"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="gender"
                    android:text="Other" />

            </RadioGroup>
        </TableRow>
    </TableLayout>
</LinearLayout>
